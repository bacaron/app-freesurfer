#!/bin/bash
#PBS -l nodes=1:ppn=8,vmem=16gb,walltime=48:00:00
#PBS -N freesurfer
#PBS -V

rm -rf output #in case this is rerun

#module load singularity 2> /dev/null

[ -z "$FREESURFER_LICENSE" ] && echo "Please set FREESURFER_LICENSE in .bashrc" && exit 1;
echo $FREESURFER_LICENSE > license.txt
time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/freesurfer_on_mcr:6.0.0 ./reconall.sh

#!/bin/bash
#PBS -l nodes=1:ppn=8,vmem=16gb,walltime=24:00:00
#PBS -N freesurfer
#PBS -V

rm -rf output #in case this is rerun

#module load singularity 2> /dev/null

[ -z "$FREESURFER_LICENSE" ] && echo "Please set FREESURFER_LICENSE in .bashrc" && exit 1;

time singularity exec --writable -e docker://brainlife/freesurfer_on_mcr:6.0.0 bash -c "echo $FREESURFER_LICENSE > /usr/local/freesurfer/license.txt && ./reconall.sh"
